{
  "name": "report-from-hell",
  "version": "0.0.1",
  "description": "Timesheet application based on redmine api",
  "main": "main.js",
  "scripts": {
    "test": "./node_modules/.bin/karma start karma.config.js",
    "test-watch": "./node_modules/.bin/karma start karma.config.js --single-run",
    "start": "./node_modules/.bin/webpack-dev-server --progress --inline --hot --port 4000",
    "build": "npm i && npm run clean && npm run build:bundle",
    "clean": "./node_modules/.bin/rimraf public",
    "build:bundle": "NODE_ENV=production webpack -p --config webpack.production.config.js --progress --profile --colors",
    "watch-app": "./node_modules/.bin/webpack -w",
    "deploy": "npm run build && rsync -avzC ./ ideato@52.29.194.12:/var/www/report.ideato.it",
    "precommit": "lint-staged",
    "prettier": "./node_modules/.bin/prettier --single-quote --list-different --no-semi --write \"src/**/*.{js,jsx}\" && ./node_modules/.bin/prettier --single-quote --list-different --write \"src/**/*.{css}\"",
    "desktop": "webpack --config webpack.desktop.config.js --progress --profile --colors && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm build && electron-builder -m",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "ReportFromHell",
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --single-quote --list-different --no-semi --write",
      "git add"
    ],
    "src/**/*.css": [
      "prettier --single-quote --list-different --write",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.15.2",
    "bootstrap": "^3.3.7",
    "immutable": "^3.8.1",
    "lodash": "^4.17.2",
    "moment": "^2.18.1",
    "react": "^15.4.1",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.4.1",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.13.0",
    "css-loader": "^0.26.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.6.3",
    "electron-packager": "^8.7.2",
    "file-loader": "^0.9.0",
    "hapi": "^16.1.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
    "inert": "^4.2.0",
    "jasmine-core": "^2.5.0",
    "jasmine-immutable-matchers": "^1.1.2",
    "karma": "^1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-webpack": "^1.8.0",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  }
}
